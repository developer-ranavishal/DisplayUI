<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="OKAS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>

    <style name="RoundedImage_Size_50">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

    <style name="MaterialAlertDialog_Rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


    <style name="ImageViewAsButtonStyle">
        <!-- Background with insets and rounded corners -->
        <item name="android:background">@drawable/imageview_button_background</item>
        <!-- Optional: Adjust tint for the image to match button states -->
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_24dp</item>
        <item name="cornerSizeBottomRight">@dimen/_24dp</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/SchedulerTimePickerStyle</item>
    </style>

    <style name="SchedulerTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="FadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="FadeDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <!-- Define the rounded shape for ShapeableImageView -->
    <style name="RoundedImage" parent="">
        <item name="cornerSize">4%</item>
    </style>


    <style name="CustomTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoDropdownIconTextInputLayout">
        <item name="endIconMode">none</item>
    </style>



    <style name="proxima_regular">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="proxima_regular_bold">
        <item name="android:fontFamily">@font/proxima_nova_extrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

 <style name="proxima_regular_semibold">
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="proxima_regular_bold_blue">
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12dp</item>
    </style>
 <style name="CircleImageStyle">
     <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_60dp</item>
    </style>


    <style name="SearchViewStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
    </style>

</resources>