<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:background="@color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/custom_btn"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_2dp"
        android:background="@drawable/bg_circle_black"
        android:backgroundTint="@color/custom_btn_on_boarding_disable_color"
        android:padding="@dimen/_12dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_check_white" />

    <ProgressBar
        android:id="@+id/custom_progress_bar"
        android:layout_width="@dimen/_64dp"
        android:layout_height="@dimen/_64dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_2dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bar_on_boarding"
        android:visibility="gone" />

</RelativeLayout>