<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".4" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/welcomeImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:padding="@dimen/_32dp"
            android:src="@drawable/okas_logo_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/welcomeTextView"
            app:layout_constraintStart_toStartOf="@+id/welcomeTextView"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_96dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:textColor="@color/black"
            android:text="@string/welcome_to_experience_tv_display"
            android:textSize="@dimen/_18sp"
            android:layout_marginBottom="@dimen/_36dp"
            app:fontFamily="@font/proxima_nova_regular"
            app:layout_constraintBottom_toTopOf="@+id/getStartedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/getStartedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_56dp"
            android:layout_marginHorizontal="@dimen/_60dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/color_primary"
            android:fontFamily="@font/proxima_nova_regular"
            android:gravity="center"
            android:hint="@string/get_started"
            android:layout_marginBottom="@dimen/_132dp"
            android:textAlignment="center"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/welcomeTextView"
            app:layout_constraintStart_toStartOf="@+id/welcomeTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
